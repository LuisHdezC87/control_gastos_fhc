<p id="notice"><%= notice %></p>

<h1>Pagos</h1>

<table>
  <thead>
    <tr>
      <th>Bill</th>
      <th>Payment amount</th>
      <th>Payment date</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.bill_id %></td>
        <td><%= payment.payment_amount %></td>
        <td><%= payment.payment_date %></td>
        <td><%= payment.contact_id %></td>
        <td><%= link_to 'Edit', edit_project_bill_payment_path(@project, @bill, payment) %></td>
        <td><%= link_to 'Destroy', project_bill_payment_path(@project, @bill, payment), method: :delete, data: { confirm: 'estas segur@?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

