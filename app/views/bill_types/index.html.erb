<p id="notice"><%= notice %></p>

<h1>Bill Types</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Description</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bill_types.each do |bill_type| %>
      <tr>
        <td><%= bill_type.project_id %></td>
        <td><%= bill_type.description %></td>
        <td><%= bill_type.name %></td>
        <td><%= link_to 'Show', project_bill_type_path(@project, bill_type) %></td>
        <td><%= link_to 'Edit', edit_project_bill_type_path(@project, bill_type) %></td>
        <td><%= link_to 'Destroy', project_bill_type_path(@project, bill_type), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bill Type', new_project_bill_type_path(@project) %>
