<p id="notice"><%= notice %></p>
<div class="category-show-section">
  <div class="category-info-section">
    <div class="view-content">

      <div class="title">Category: <%= @category.name %></div>
      <p>
        <strong>Project:</strong>
        <%= @category.project.name %>
      </p>

      <p>
        <strong>Name:</strong>
        <%= @category.name %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @category.description %>
      </p>

      <%= link_to 'Edit', edit_project_category_path(@category) %> |
      <%= link_to 'Back', project_categories_path %>
    </div>
  </div>

  <div class="category-product-section">
    <div class="table-products-index">
      <div class="category-product-section-title">Productos de <%= @category.name %></div>
      <table>
        <thead>
        <tr>
          <th>Name</th>
          <th>Notes</th>
          <th>Price</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.notes %></td>
            <td><%= product.price %></td>

            <td><%= link_to 'Show', project_category_product_path(@project, @category, product) %></td>
            <td><%= link_to 'Edit', edit_project_category_product_path(@project, @category, product) %></td>
            <td><%= link_to 'Destroy', project_category_product_path(@project, @category, product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="category-product-form">
      Agregar un producto nuevo:
      <%= render 'products/form', product: @product %>
    </div>
  </div>
</div>
